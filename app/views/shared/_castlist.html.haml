= will_paginate castlist
- castlist.each do |c|
  %div.castThumb
    = link_to(image_tag(c.thumbnail_path,
      alt: c.title,
      title: c.title,
      size: '137x158'), c.path)

- if castlist.empty?
  %div.noCast
    Sorry no cast members match your criteria,
    %br/
    please try again.

= will_paginate castlist
