<% @title = 'Contact' %>
<% @description = 'Get in conntact with us here at CK Casting' %>
<div class="contactDetail">
  <p>If you would like to contact us please use the form below.
  </p>
  <%= form_for @message, url: contact_path do |f| %>
    <%= f.label :name, 'Your name:' %><br />
    <%= f.text_field :name, size: 25 %><br />

    <%= f.label :email, 'Your email address:' %><br />
    <%= f.text_field :email, size: 25 %><br />

    <%= f.label :message, 'Your message:' %><br />
    <%= f.text_area :message, size: '40x10' %><br />
    <%= f.submit "Send" %>
  <% end %>
</div>
