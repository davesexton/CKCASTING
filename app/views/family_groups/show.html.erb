<h1>FamilyGroups#show</h1>
<p>Find me in app/views/family_groups/show.html.erb</p>

<div class="columnCastImage">
  <div class="castImage">
  <%= image_tag @family_groups.image_url,
                alt: @family_groups.title,
                title: @family_groups.title,
                size: '261x300' %>
  </div>
</div>
<div class="columnCastDetails">
<% @castlist.each do |c| %>

  <%= render partial: 'shared/castdetails',
             locals: {c: c, show_family_link: false} %>

<% end %>
</div>
