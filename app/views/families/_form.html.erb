<%= form_for(@family) do |f| %>
  <% if @family.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@family.errors.count, "error") %> prohibited this family from being saved:</h2>

      <ul>
      <% @family.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="imageColumn">
    <div class="castThumb">
      <%= image_tag f.object.thumbnail_url %>
    </div>
  </div>
  <div class="fieldColumn">
    <div class="field">
      <%= f.label :family_name,
                  class: 'label' %>
      <%= f.text_field :family_name %><br />
    </div>
    <div class="field">
      <%= f.label :image_upload,
                  'New image',
                  class: 'label' %>
      <%= f.file_field 'image_upload' %>
    </div>
    <div class="fieldHelp">
      The ideal image size is 261 pixels wide by 300 pixels tall.
      Images outside this range will be automatticlly resized and
      croped to fit.</div>
    <div class="field">
      <%= f.label 'Memebers',
                  class: 'label' %>
      <div class="checkboxSelect">
        <% @family.get_available_people.each do |p| %>
          <div>
            <%= check_box_tag 'members[]',
                              p.id,
                              (@family.person_ids.include?(p.id) unless @family.id.nil?)  %>
            <%= p.full_name %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
