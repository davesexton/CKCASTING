<% @title = 'Login' %>
<%= form_tag do %>
  <fieldset>
    <legend>Please Log In</legend>

    <div class="field">
      <%= label_tag :name, 'Name' %>
      <%= text_field_tag :name, params[:name] %>
    </div>

    <div class="field">
      <%= label_tag :password, 'Password' %>
      <%= password_field_tag :password, params[:password] %>
    </div>

    <div class="field">
      <%= submit_tag "Login" %>
    </div>

  </fieldset>
<% end %>
