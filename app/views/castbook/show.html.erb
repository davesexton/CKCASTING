<div class="columnCastImage">
  <div class="castImage">
  <%= image_tag("cast_images/#{@castbook.id}.jpg", 
       :alt => @castbook.full_name) %>
  </div>
</div>
<div class="columnCastDetails">
  <table>
  <tr>
    <td colspan="2">
      <h1><%= @castbook.full_name %></h1>
    </td>
  </tr>
  <tr>
    <td>
      Height:
    </td>
    <td>
      <%= @castbook.height_feet %>'&nbsp;
      <%= @castbook.height_inches %>"
    </td>
  <tr>
  <tr>
    <td>
      Hair Colour:
    </td>
    <td>
      <%= @castbook.hair_colour %>
    </td>
  <tr>
  <tr>
    <td>
      Eye Colour:
    </td>
    <td>
      <%= @castbook.eye_colour %>
    </td>
  <tr>
  <tr>
    <td>
      Gender:
    </td>
    <td>
      <%= @castbook.gender %>
    </td>
  <tr>
  <tr>
    <td>
      Last viewed:
    </td>
    <td>
      <%= @castbook.last_viewed_at.strftime("%d-%b-%Y") %>
    </td>
  <tr>
  <tr>
    <td>
      View count:
    </td>
    <td>
      <%= @castbook.view_count %>
    </td>
  <tr>
  <tr>
    <td>
      URL:
    </td>
    <td><%= @castbook.url %>
    </td>
  <tr>
  <% if @castbook.skill_list != '' %>
  <tr>
    <td>
      Skills:
    </td>
    <td>
    <%= @castbook.skill_list %>
    </td>
  </tr>
  <% end %>
  <% if @credit.size != 0 %>
  <tr>
    <td colspan="2">
      Credits(<%= @credit.size %>):
    </td>
  </tr>
  <tr>
    <td colspan="2">
      <ul>
      <% @credit.each do |c| %>
      <li>
      <%= c.credit_text %>
      </li>
      <% end %>
      </ul>
    </td>
  </tr>
  <% end %>
  </table>
  <%= link_to 'Edit', edit_castbook_path(@castbook) %> |
  <%= link_to 'Back', castbook_path %>
</div>
